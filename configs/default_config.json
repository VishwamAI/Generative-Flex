{
  "model": {
    "vocab_size": 50257,
    "d_model": 2048,
    "nhead": 32,
    "num_layers": 32,
    "dim_feedforward": 8192,
    "dropout": 0.1,
    "max_seq_length": 2048,
    "attention_block_size": 1024,
    "num_experts": 16,
    "expert_capacity_factor": 1.25,
    "use_flash_attention": true,
    "use_mixture_of_experts": true,
    "gradient_checkpointing": true
  },
  "training": {
    "batch_size": 32,
    "learning_rate": 1e-4,
    "weight_decay": 0.01,
    "num_epochs": 100,
    "warmup_steps": 10000,
    "max_grad_norm": 1.0,
    "fp16": true,
    "distributed_training": true,
    "save_steps": 1000,
    "eval_steps": 1000,
    "output_dir": "outputs",
    "cache_dir": "cache"
  }
}
